<p id="notice"></p>
<div class="container px-5 px-sm-0"> 
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image', size: "200x200" %> 
      <table class="table">
        <tbody>
          <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tr>
              
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-online-secondary btn-block" href="/users/:id/edit" style="color: #6c757d; border-color: #6c757d;">
          <i class="fas fa-user-cog" aria-hidden="true"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <form action="/books" accept-charset="UTF-8" method="post">
        <input type="hidden" name="authenticity_token" autocomplete="off"></input>
        <div class="form-group">
          <label for="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book-title"></input>
        </div>
        <div class="form-group">
          <label for="book_opinions">Opinion</label>
          <textarea class="form-control book_body" height="145px;"></textarea>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></input>
        </div>
      </form>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.body %></td>
            <td><%=link_to book.title, book_path(book.id) %></td>
          </tr> 
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
