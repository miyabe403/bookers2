<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table"> 
          <tbody>
              <tr>
                <th>name</th> 
                <th><%= @user.name %></th> <!-- post_image変数のcaptionカラムを表示します。 -->
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
          </tbody>
        </table>
      <div class="row">
        <%= link_to edit_user_path(@user), class: 'btn btn-online-secondary btn-block', style: "color: #6c757d; border-color: #6c757d;" do %>  
          <i class="fas fa-user-cog" aria-hidden="true"></i>
          Edit
        <% end %>
      </div>
      <!-- form_with部分 --> 
      <%= form_with model: @book, method: :post do |f| %>  <!-- 部分テンプレート内のグローバル変数をローカル変数に修正  --> 
      <h2 class="mt-3">New book</h2>
      <!--<form action="/books" accept-charset="UTF-8" method="post">-->
      <!--  <input type="hidden" name="authenticity_token" autocomplete="off"></input>-->
        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class:"form-control book_body", height:"145px;" %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
        </div>
        <% end %>
      </form>
    </div>
<div class="col-md-8 offset-md-1"> 
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr> 
            <td><%= link_to user_path(@user.id) do %> 
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>      
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr> 
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
