<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <%= form_with model: @user, url: '/users', method: :patch do |f| %>
      <h2 class="mt-3">User info</h2>
      <form action="/users" accept-charset="UTF-8" method="post">
        <input type="hidden" name="authenticity_token" autocomplete="off"></input>
        <div class="form-group">
          <%= f.label :Name %>
          <%= f.text_field :name, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <%= f.label :Image %>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :Introduction %>
          <%= f.text_area :introduction, class:"form-control book_body", height:"145px;" %>
        </div>
        <div class="form-group">
        <%= f.submit 'Update Book', class:"btn btn-secondary" %>
        </div>
        <% end %>
        </div>
    </div>   
</div>